<% include ../partials/header %>

<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1>Change Information</h1>

    <form  method="post" action="/users/<%= user.id %>?_method=PATCH">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="local.name" value="<%= currentUser.local.name %>" required="true">
        </div>
        <div class="form-group">
          <label>Headline</label>
          <input type="text" class="form-control" name="local.head_line" value="<%= currentUser.local.head_line %>" required="true">
        </div>
        <div class="form-group">
            <label>User Name</label>
            <input type="text" class="form-control" name="local.user_name" value="<%= currentUser.local.user_name %>" required="true">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="local.email" value="<%= currentUser.local.email %>" required="true">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Edit Information</button>
    </form>

</div>
</div>

